<button class="navbar-toggle"></button>

<nav class="navbar">
  <% if (theme.brand){ %>
    <div class="logo">
      <a href="<%- url_for() %>"><img src="<%- theme.brand %>" alt="<%= config.title %>"></a>
    </div>
  <% } %>
  <div class="nav nav-main">
    <% for (var i in theme.menu){ %>
      <div class="nav-item">
        <a class="nav-item-link" href="<%- url_for(theme.menu[i]) %>"><%= __(i) %></a>
      </div>
    <% } %>
    <div class="nav-item">
      <a class="nav-item-link nav-item-search" title="<%= __('search') %>">
        <i class="fe fe-search"></i>
        <%- __(theme.search_text) %>
      </a>
    </div>
  </div>
</nav>

